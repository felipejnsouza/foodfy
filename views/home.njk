{% extends "layout.njk" %}
    
    
    {% block title %}
        <title>Foodfy</title>
    {% endblock title %}

    {% block style %}
         <link rel="stylesheet" href="home.css">
    {% endblock style %}

    {% block menu %}
        <div class="menu">
                <a href="/about">Sobre</a>
                <a href="/recipes">Receitas</a>
        </div>
    {% endblock menu %}

    {% block contents %}
        <div class="folder">
                <div class="text">
                <h1>As melhores receitas</h1>
                <p>Aprenda a construir os melhores pratos
                    com receitas criadas por profissionais 
                    do mundo inteiro.
                </p> 
                </div>
                <div class="image">
                    <img src="/assets/chef.png" alt="">
                </div>
            </div>

            <div class="favorites">
                <h2>Mais acessadas</h2>

                <div class="cards">
                    <div class="card">
                        <div class="foto">
                            <img src="/assets/burger.png" alt="">
                        </div>
                        <div class="dishName">
                            <h3>Triplo bacon burger</h3>
                        </div>
                        <div class="author">
                            <p>por Jorge Relato</p>
                        </div>

                    </div>

                    <div class="card">
                        <div class="foto">
                            <img src="/assets/pizza.png" alt="Imagem de uma pizza">
                        </div>
                        <div class="dishName">
                            <h3>Pizza 4 estações</h3>
                        </div>
                        <div class="author">
                            <p>por Fabiana Melo</p>
                        </div>

                    </div>

                    <div class="card">
                        <div class="foto">
                            <img src="/assets/espaguete.png" alt="Prato de espaguete">
                        </div>
                        <div class="dishName">
                            <h3>Espaguete ao alho</h3>
                        </div>
                        <div class="author">
                            <p>por Júlia Kinoto</p>
                        </div>

                    </div>

                    <div class="card">
                        <div class="foto">
                            <img src="/assets/lasanha.png" alt="Prato de lasanha">
                        </div>
                        <div class="dishName">
                            <h3>Lasanha mac n' cheese</h3>
                        </div>
                        <div class="author">
                            <p>por Juliano Vieira</p>
                        </div>

                    </div>

                    <div class="card">
                        <div class="foto">
                            <img src="/assets/doce.png" alt="Prato de doce">
                        </div>
                        <div class="dishName">
                            <h3>Docinhos pão-do-céu</h3>
                        </div>
                        <div class="author">
                            <p>por Ricardo Goves</p>
                        </div>

                    </div>

                    <div class="card">
                        <div class="foto">
                            <img src="/assets/asinhas.png" alt="Prato de asinhas">
                        </div>
                        <div class="dishName">
                            <h3>Asinhas de frango ao barbecue</h3>
                        </div>
                        <div class="author">
                            <p>por Vania Steroski</p>
                        </div>

                    </div>

                </div>
        </div>
    {% endblock contents %}
  