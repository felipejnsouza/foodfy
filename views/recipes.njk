{% extends "layout.njk" %}
    
    {% block title %}
        <title>Foodfy - Receitas</title>
    {% endblock title %}

    {% block style %}
        <link rel="stylesheet" href="recipes.css">
    {% endblock style %}

    {% block menu %}
        <div class="menu">
            <a href="/">Home</a>
            <a href="/about">Sobre</a>
        </div>
    {% endblock menu %}
       
    {% block contents %}
        <div class="recipes">
        
            <div class="cards">
                
                {% for dish in dishes %}
                <div class="card">
                    <div class="foto">
                        <img src="{{dish.image}}" alt="">
                    </div>
                    <div class="dishName">
                        <h3>{{dish.title}}</h3>
                    </div>
                    <div class="author">
                        <p>por {{dish.author}}</p>
                    </div>

                </div>
                {% endfor%}
                
            </div>
        </div>

    {% endblock contents %}

    {% block modal %}
        <div class="modal-overlay">
            <div class="modal-card">
                <div class="modal-content">
                    <div class="foto">
                        <img src="" alt="">
                    </div>
                    <div class="dishName">
                        <h3></h3>
                    </div>
                    <div class="author">
                        <p>por Jorge Relato</p>
                    </div>
                    <div class="close-modal">
                        <a>Fechar modal</a>
                    </div>
                    </div>
            </div>
        </div>
    {% endblock modal %}

    {% block script %}
        <script src="/script.js"></script>
    {% endblock script %}
